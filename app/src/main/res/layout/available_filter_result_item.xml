<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/line_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        style="@style/mont_semi_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet" />


                    <TextView
                        android:id="@+id/description"
                        style="@style/mont_reg_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quos maxime voluptatum" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_bg">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_margin="@dimen/_1sdp"
                            app:cardCornerRadius="@dimen/_16sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ola_electric" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/mont_semi_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type 2 Charge" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp">

                            <TextView
                                style="@style/mont_semi_black_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Power - " />

                            <TextView
                                android:id="@+id/power"
                                style="@style/mont_reg_black_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15KW" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp">

                            <TextView
                                style="@style/mont_semi_black_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate - " />

                            <TextView
                                android:id="@+id/rate"
                                style="@style/mont_reg_black_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs 13 per kWh" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bookNow"
                        style="@style/button_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_46sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:backgroundTint="@color/light_green"
                        android:text="Available / Book" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/header"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/filter_heading_blue_bg">

                        <TextView
                            android:id="@+id/percentage"
                            style="@style/mont_semi_white_14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Percentage" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/filter_heading_white_bg">

                        <TextView
                            android:id="@+id/units"
                            style="@style/mont_semi_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Units" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/filter_heading_white_bg">

                        <TextView
                            android:id="@+id/times"
                            style="@style/mont_semi_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/Time" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/percentageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/mont_semi_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How much percentage do you want to add?" />


                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:max="100" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/unitLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/mont_semi_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How many units do you need?" />


                    <SeekBar
                        android:id="@+id/unitSeekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:max="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/mont_semi_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How long will you charge?" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="90dp"
                                android:weightSum="3">

                                <RadioButton
                                    android:id="@+id/radioButton1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="1 hour" />


                                <RadioButton
                                    android:id="@+id/radioButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="2 hour" />


                                <RadioButton
                                    android:id="@+id/radioButton3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="3 hour" />
                            </RadioGroup>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">


                    <TextView
                        style="@style/mont_semi_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"
                        android:text="OR" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <EditText
                        style="@style/mont_reg_black_14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/line_bg"
                        android:gravity="center_vertical"
                        android:hint="@string/Enter_percentage"
                        android:inputType="number"
                        android:maxLength="3"
                        android:paddingLeft="@dimen/_16sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/mont_reg_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Estimates based on your usage from 25% to 85%" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/estimated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_filter_none_24" />

                        <TextView
                            style="@style/mont_reg_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_toLeftOf="@id/rupee"
                            android:layout_toRightOf="@+id/estimated"
                            android:text="@string/Estimated_Price" />

                        <TextView
                            android:id="@+id/rupee"
                            style="@style/mont_semi_black_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="RS 150" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_access_time_24" />

                        <TextView
                            style="@style/mont_reg_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_toLeftOf="@id/sessionTime"
                            android:layout_toRightOf="@+id/time"
                            android:text="@string/Session_Time" />

                        <TextView
                            android:id="@+id/sessionTime"
                            style="@style/mont_semi_black_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="1.5 Hrs" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/vehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_directions_car_green_24" />

                        <TextView
                            style="@style/mont_reg_black_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_toLeftOf="@id/km"
                            android:layout_toRightOf="@+id/vehicle"
                            android:text="@string/Estimated_Price" />

                        <TextView
                            android:id="@+id/km"
                            style="@style/mont_semi_black_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="150 KM" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/showDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/send_round_bg"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_send_24" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>